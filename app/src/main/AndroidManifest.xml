<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dolcegusto.nescafe">

    <application
        android:name=".app.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Nescafe">
        <activity
            android:name=".app.ui.activities.SeeAllActivity"
            android:exported="false" />
        <activity
            android:name=".features.main.ui.activities.MainActivity"
            android:exported="false" />
        <activity
            android:name=".features.splash.ui.activities.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".features.profile.ui.activities.OrderDetailsActivity"
            android:exported="false" />
    </application>

</manifest>