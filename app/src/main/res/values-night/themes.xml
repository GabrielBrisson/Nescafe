<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Nescafe" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/night_primary</item>
        <item name="colorPrimaryVariant">@color/night_primary</item>
        <item name="colorOnPrimary">@color/night_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/night_secondary</item>
        <item name="colorSecondaryVariant">@color/night_secondary</item>
        <item name="colorOnSecondary">@color/night_on_secondary</item>
        <!-- Status and Navigation bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="colorSurface">@color/night_surface</item>
        <item name="colorOnSurface">@color/night_on_surface</item>
        <item name="backgroundColor">@color/night_background</item>
        <item name="colorOnBackground">@color/night_on_background</item>
    </style>
</resources>